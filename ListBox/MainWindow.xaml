<Window x:Class="ListBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>

        <ListBox>
            <Button Content="1" Width="150"/>
            <Button Content="2" Width="150"/>
            <Button Content="3" Width="150"/>
            <Button Content="4" Width="150"/>
            <Button Content="5" Width="150"/>

            <ListBoxItem>
                <TextBlock Text="First text"/>
            </ListBoxItem>

            <ListBoxItem>
                <TextBlock Text="Second text"/>
            </ListBoxItem>

        </ListBox>

    </StackPanel>
</Window>
